
<% if false %>
    <form action="/users" method="POST" accept-charset="UTF-8">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <label for="">Username:</label>
        <input type="text" name="user[username]"><br><br>
        <label for="" name="">Email:</label>
        <input type="text" name="user[email]"><br><br>
        <label for="" name="">Password</label>
        <input type="password" name="user[password]"><br><br>
        <input type="submit" value="Registrar">
    </form>
<% end %>

<% if false %>
    <%= form_tag('/users') do %>
        <%= label_tag('username') %>
        <%= text_field_tag('user[username]') %><br><br>
        <%= label_tag('email') %>
        <%= text_field_tag('user[email]') %><br><br>
        <%= label_tag('password') %>
        <%= password_field_tag('user[password]') %><br><br>
        <%= submit_tag "Registrar" %>
    <% end %>
<% end %>

<% if true %>
    <%= form_for @user do |f| %>
        <%= f.label :username, "Your Username"%>
        <%= f.text_field :username, placeholder: "user33" %><br><br>
        <%= f.label :email, "Email"%>
        <%= f.text_field :email, placeholder: "user@email.com" %><br><br>
        <%= f.label :password, "Password" %>
        <%= f.password_field :password%><br><br>
        <%= f.submit "Registrar" %>
    <% end %>
<% end %>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <h2><%= "Errores"%></h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>